<h1>Add stock</h1>

<%= form_for :stock, url: stocks_path, data: { turbo: false } do |f| %>

	<p>
		Item: <br />
		<%= f.collection_select :item_id, Item.all, :id, :number, {:prompt => ' Select item '} %>
	</p>

	<p>
		<%= f.label :Quantity %> <br />
		<%= f.text_field :quantity %>
	</p>

	<p>
		<%= f.label :Movement %> <br />
		<%= f.select :flow, ['receipt', 'expense'], {:prompt => ' Select movement '} %>
	</p>

	<p>
		<%= f.submit 'Create stock' %>
	</p>

<% end %>